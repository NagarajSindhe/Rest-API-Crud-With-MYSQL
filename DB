 CREATE TABLE  `hr.website` (
`id` int(11) NOT NULL AUTO_INCREMENT,
`title` text,
`description` text,
`url` text,
PRIMARY KEY (`id`)
);
 
 show variables like 'max_connections';
SET GLOBAL max_connections = 5000;
SHOW PROCESSLIST;
show status like '%onn%';
show status like 'Threads_connected';
